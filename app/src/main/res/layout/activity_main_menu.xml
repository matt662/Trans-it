<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu">

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/TripPlannerA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/tripplanner"
        android:scaleType="fitCenter"
        android:background="@null" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/StopMonitorA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/stopmonitor"
        android:scaleType="fitCenter"
        android:background="@null" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/RouteListA"
        android:scaleType="fitCenter"
        android:src="@drawable/routelist"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/MapA"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/map"
        android:background="@null"
        android:layout_alignTop="@+id/RouteListA"
        android:layout_alignLeft="@+id/TripPlannerA"
        android:layout_alignStart="@+id/TripPlannerA" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/FavoritesA"
        android:scaleType="fitXY"
        android:src="@drawable/favourites"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/SettingsA"
        android:layout_alignTop="@+id/FavoritesA"
        android:layout_alignLeft="@+id/MapA"
        android:layout_alignStart="@+id/MapA"
        android:scaleType="fitXY"
        android:src="@drawable/settings"
        android:background="@null" />

</RelativeLayout>
